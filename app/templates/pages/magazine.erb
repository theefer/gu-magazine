<!doctype html>
<html>
<head>
  <meta charset="utf-8"/>
  <title>Magazine</title>
  <link rel="stylesheet" type="text/css" href="/style/iphone.css">
  <style>
    #newsstand {
      width: 100%;
      height: 100%;
      background: url(/images/newsstand.jpg) no-repeat left top;
      background-size: 100% 100%;
    }
    .bundle-list {
      margin: 0;
      padding: 200px 50px 0;
      list-style-type: none;
    }
    .bundle-item a {
      margin-top: 70px;
    }
    .bundle-item a {
      width: 100px;
      background-color: white;
      float: left;
      margin-left: 20px;
      text-indent: -9999px;
      width: 85px;
      height: 64px;
      background: url(/images/guardian_ipadnewsstand.jpg) no-repeat left top;
    }
  </style>
</head>
<body>

  <div id="iphone">
  <div id="iphone-screen">

    <div id="newsstand">
    <ul class="bundle-list">
      <% for bundle in bundles %>
      <li class="bundle-item"><a href="/magazine/<%= bundle["id"] %>"><%= bundle["title"] %></a></li>
      <% end %>
    </ul>
    </div>

  </div>
  </div>

</body>
</html>
